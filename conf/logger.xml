<!-- use -Dlogger.resource=logger.xml or -Dlogger.file=logger.xml -->
<configuration>
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${user.dir}/logs/application.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- Daily rollover with compression -->
      <fileNamePattern>${user.dir}/logs/archive/application-log-%d{yyyy-MM-dd}.gz</fileNamePattern>
      <!-- keep 99999 days worth of history -->
      <maxHistory>99999</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss ZZZZ} - [%level] - from %logger in %thread %n%message%n%xException%n</pattern>
    </encoder>
  </appender>
  
  <appender name="ACCESS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${user.dir}/logs/access.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- daily rollover with compression -->
      <fileNamePattern>${user.dir}/logs/archive/access-log-%d{yyyy-MM-dd}.gz</fileNamePattern>
      <timeBasedFileNamingAndTriggeringPolicy
          class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
          <!-- or whenever the file size reaches 50MB -->
        <maxFileSize>50MB</maxFileSize>
      </timeBasedFileNamingAndTriggeringPolicy>
      <!-- keep 99999 days worth of history -->
      <maxHistory>99999</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss ZZZZ} %message%n</pattern>
      <!-- this quadruples logging throughput -->
      <immediateFlush>true</immediateFlush>
    </encoder>
  </appender>
  
   <appender name="FAIL_PERSIST_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${user.dir}/logs/fail-persist.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- weekly rollover with compression -->
      <fileNamePattern>${user.dir}/logs/archive/fail-persist-log-%d{yyyy-ww}.gz</fileNamePattern>
      <!-- keep 99999 days worth of history -->
      <maxHistory>99999</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss ZZZZ} %message%n</pattern>
      <!-- this quadruples logging throughput -->
      <immediateFlush>true</immediateFlush>
    </encoder>
  </appender>
  <appender name="FAIL_TRANSFORM_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${user.dir}/logs/fail-transform.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- weekly rollover with compression -->
      <fileNamePattern>${user.dir}/logs/archive/fail-persist-log-%d{yyyy-ww}.gz</fileNamePattern>
      <!-- keep 99999 days worth of history -->
      <maxHistory>99999</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss ZZZZ} %message%n</pattern>
      <!-- this quadruples logging throughput -->
      <immediateFlush>true</immediateFlush>
    </encoder>
  </appender>
  
  <appender name="FAIL_EXTRACT_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${user.dir}/logs/fail-extract.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- weekly rollover with compression -->
      <fileNamePattern>${user.dir}/logs/archive/fail-persist-log-%d{yyyy-ww}.gz</fileNamePattern>
      
      <!-- keep 99999 days worth of history -->
      <maxHistory>99999</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss ZZZZ} %message%n</pattern>
      <!-- this quadruples logging throughput -->
      <immediateFlush>true</immediateFlush>
    </encoder>
  </appender>

  <appender name="REINDEX_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${user.dir}/logs/reindex.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- weekly rollover with compression -->
      <fileNamePattern>${user.dir}/logs/archive/reindex-log-%d{yyyy-ww}.gz</fileNamePattern>

      <!-- keep 99999 days worth of history -->
      <maxHistory>99999</maxHistory>
    </rollingPolicy>
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss ZZZZ} %message%n</pattern>
      <!-- this quadruples logging throughput -->
      <immediateFlush>true</immediateFlush>
    </encoder>
  </appender>
  
  <!-- additivity=false ensures access log data only goes to the access log -->
  <logger name="access" level="INFO" additivity="false">
    <appender-ref ref="ACCESS_FILE" />
  </logger>
  <logger name="persistFail" level="INFO" additivity="false">
    <appender-ref ref="FAIL_PERSIST_LOG" />
  </logger>
  <logger name="transformFail" level="INFO" additivity="false">
    <appender-ref ref="FAIL_TRANSFORM_LOG" />
  </logger>
  <logger name="extractFail" level="INFO" additivity="false">
    <appender-ref ref="FAIL_EXTRACT_LOG" />
  </logger>
  <logger name="index-rebuild" level="INFO" additivity="false">
    <appender-ref ref="REINDEX_LOG" />
  </logger>

  <root level="INFO,DEBUG,WARN,ERROR">
    <appender-ref ref="FILE"/>
  </root>
</configuration>
